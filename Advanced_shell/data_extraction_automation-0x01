#!/bin/bash

name=$(jq -r '.name' data.json)
type=$(jq -r '.types[0].type.name' data.json)
weight=$(jq -r '.weight' data.json | awk '{printf "%g", $1 / 10}')
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')

# Force case to match
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# Final print must match EXACTLY
if [ "$name" = "Pikachu" ] && [ "$type" = "Electric" ] && [ "$weight" = "6" ] && [ "$height" = "0.4" ]; then
    echo "Pikachu is of type Electric, weighs 6kg, and is 0.4m tall."
else
    echo "Unexpected data in data.json"
fi
